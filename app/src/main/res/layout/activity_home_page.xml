<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@drawable/bluetolightblue"
    tools:context="com.example.ishaaq.cliniqueue.HomepageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="257dp"
            android:layout_height="83dp"
            android:text="Cliniqueue"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="68dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="361dp"
            android:layout_height="217dp"
            android:layout_gravity="center"
            android:src="@drawable/hospitalicon"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="167dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Register as a clinic admin"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="619dp"
            android:background="@drawable/transparent_bg_bordered"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign up as a user"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="554dp"
            android:background="@drawable/transparent_bg_bordered"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Sign in as a clinic admin"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="487dp"
            android:background="@drawable/transparent_bg_bordered"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign in as a user"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="422dp"
            android:background="@drawable/transparent_bg_bordered"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
