<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ClinicsFilterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clinics Filter"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="30dp"
            android:textColorHint="#000"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="30dp"
            android:hint="Clinic Name" />


        <EditText
            android:id="@+id/editText1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="30dp"
            android:text="Distance" />


        <SeekBar
            android:id="@+id/simpleSeekBar"
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="30dp"
            android:text="Wait Time" />

        <SeekBar
            android:id="@+id/simpleSeekBar2"
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:hint="Availability Time From"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#000"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:hint="Availability Time To"
            android:backgroundTint="@color/red"
            android:textColorHint="#000"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>


        <Button
            android:id="@+id/filter"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:onClick="filter"
            android:background="@color/green" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>