<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ishaaq.cliniqueue.ReasonForVisitActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="400dp"
            android:layout_height="38dp"
            android:text="Select your reason for visit"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="27dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/allergiReaction"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:text="Alergic Reaction"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/skinDisorder"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            android:text="Skin Disorder"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="122dp" />

        <Button
            android:id="@+id/vaccination"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:text="Vaccination"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="163dp" />

        <Button
            android:id="@+id/jointDisorder"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            android:text="joint disorder"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="204dp" />

        <Button
            android:id="@+id/backProblems"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:text="back problems"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/cholestrolProblems"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            android:text="Cholestrol problems"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="286dp" />
        <Button
            android:id="@+id/diabeticPatient"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:text="Diabetic Patient"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="327dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/cutStitches"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:text="Cut/Stitches"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="368dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/bloodpressure"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:text="Blood pressure"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="409dp" />

        <Button
            android:id="@+id/mentalhealth"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            android:text="Mental Health"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="450dp" />

        <Button
            android:id="@+id/headaches"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:text="Headaches and migraines"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="491dp" />

        <Button
            android:id="@+id/others"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            android:text="Other"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="491dp" />
    </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
