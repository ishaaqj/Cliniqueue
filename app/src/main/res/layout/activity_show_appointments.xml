<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowAppointmentsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bluetolightblue">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="60dp"
            android:text="CURRENT APPOINTMENT\nAPPOINTMENT CONFIRMATION #\n 1 \n\n CLINIC NAME \n Apple Tree Clinic \n\n  WAIT TIME\n  10 minutes left \n\n QUEUE NUMBER\n 3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />


        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:text="Cancel Appointment"
            android:textSize="20sp"
            android:background="@drawable/transparent_button"
            android:textColor="@color/white"
            android:onClick="cancel"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>