<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluetolightblue"
    android:orientation="vertical"
    tools:context=".activity_clinics_list"
    android:weightSum="1">
    <TextView
        android:id="@+id/clinic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="UOttawa Health Services"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/clinic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Rideau-Friel Medical Centre"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/clinic3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Appletree Medical Group - Sparks"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/clinic4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Appletree Medical Group - Bank"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/clinic5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Carleton University Medical Services"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/clinic6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Appletree Medical Group - Slater"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        />
</LinearLayout>