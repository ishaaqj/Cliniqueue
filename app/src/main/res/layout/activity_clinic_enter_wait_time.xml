<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ClinicEnterWaitTimeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Queue Number"
            android:textSize="25dp"
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/editText13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="Enter the client's place in the queue"
            android:inputType="number"
            android:textColorHint="#000"
            android:backgroundTint="@color/red"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="196dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wait Time"
            android:textSize="25dp"
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/editText14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the client's approximate wait time"
            android:ems="20"
            android:inputType="number"
            android:textColorHint="#000"
            android:backgroundTint="@color/red"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="196dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/confirmWaitTime"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/green"
            android:text="Confirm"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:onClick="setConfirmWaitTime"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>