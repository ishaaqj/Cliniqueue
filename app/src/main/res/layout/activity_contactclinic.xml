<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluetolightblue"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:text="AppleTree Medical center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="CLINIC DETAILS:" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="1029 Hello Street" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="CLosed" />

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:background="@drawable/transparent_bg_bordered"
            android:text="Call Clinic"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/transparent_bg_bordered"
            android:text="Book Appointment" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>